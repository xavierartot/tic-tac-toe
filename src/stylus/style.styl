$sea-serpent     =       #5bc0be
$aqua            =       #6fffe9 
$orange          =       #ffa16f//orange 
$egg             =       #F3E9D2
$green-light     =       #C6DABF//red

*
  user-select: none;

.disable
  background-color $orange 
.nav
  position relative
  width 50vw
  height 50vh
  margin auto
  margin-top 3.5em;
.choice
  display: flex
  center-bloc()
  display flex
  justify-content space-between
  align-items center
  &__circle, &__cross
    cursor: pointer
    display: flex
    justify-content: center
    align-items: center
    width: 10vw
    height: 10vh
    box-shadow: 1px -2px 9px 1px #1c1e25
    border: 5px solid #3a506b
    border-radius: 3px
    transition all .5s
    text-indent: -10000px
    &:after
      font-size: 1.5em;
      text-indent: 0
  &__cross 
    color $independence!important
    background-color: $egg !important
    &:after
      content: 'x'
  &__circle 
    background-color: $green-light  !important
    color $yanke-blue !important
    &:after
      content: 'o'
      //text-indent: -46px

//- mixins
center-bloc()
  display: flex
  justify-content center 
  align-items flex-start

//player
.circle, .cross, .win
  font-size: 6em !important

.circle
  background-color: $green-light  !important
  color $yanke-blue !important
  &:after
    content: 'o'
.cross
  color $independence!important
  background-color: $egg !important
  &:after
    content: 'x'
.win
  background-color: $orange !important
  color $independence !important

.alert
  color red !important 
  background-color red !important 
  border 1px solid red !important
.hide
  display none !important
.show
  display block !important
.choose-button
  transform: scale(1.2)
  border 1px solid $orange 
